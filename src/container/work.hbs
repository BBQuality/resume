{{!--
Це код container файлу для summary сторінки,
в якому міститься код, котрий буде віддаватися по шляху (PATH) - "/summary"
--}}


<div>
    {{#with main}}
    <main>
        <div>
            <section>
                <div>
                    {{> title data="My works :" big=true}}

                    {{#each work}}
                    <ul>
                        <li>
                            <div>{{position}}</div>
                            <div>{{duration.from}} - {{#if duration.to}}{{duration.to}}{{else}}(ще працюю){{/if}}</div>
                            <div>{{#if company.url}}{{> link href=company.url text=company.name blank=true noLine=true}}{{else}} <b>{{company.name}}</b>{{/if}}</div>
                        </li>
                    </ul>

                </div>
                <div>Project: {{projectAmount}} </div>
                <hr>
                {{#each projects}}
                <ul>
                    <li>
                        <div>{{> link href=url text=name blank=true noLine=true}}</div>
                        <br>
                        <div>
                            <p>{{about}}</p>
                        </div>
                        <hr>
                        <br>
                        <div>
                            <em>Project amount:</em> <b>({{stackAmount}})</b>
                        </div>
                        <br>
                        <div>
                            <br>
                            {{#each stack}}
                            <ul>
                                <li>{{name}} </li>
                            </ul>
                            {{/each}}
                        </div>
                        <hr>
                        <br>
                        <div>
                            <em>Project awards: </em> <b>({{awardsAmount}})</b>
                        </div>
                        <br>
                        <div>
                            <br>
                            {{#each awards}}
                            <ul>
                                <li>{{name}} </li>
                            </ul>
                            {{/each}}
                        </div>
                        <br>
                    </li>
                </ul>
                {{/each}}
                {{/each}}


            </section>

        </div>
    </main>
    {{/with}}

</div>



{{!--
Цей код містить лише те, що буде виводитись в {{{body}}} в layout/default.hbs
Адже наш layout/default.hbs має вже структуру HTML
--}}