 <main>
{{#with purchase}}
  <div class="row p-3 g-2">
     
   <ol class="nav nav-tabs">
    {{#each tabs}}   
 {{#if @first}}
     <li class="nav-item active">
       
            <a class="nav-link active" href="#" >{{this}}</a>
        </li>
{{else}}
<li class="nav-item active">
            <a class="nav-link" href="#" >{{this}}</a>
        </li>
        {{/if}}
        {{/each}}  
   </ol>
   
  </div>
  
<div class="col-12 row p-3 g-2">

<div class="col-2 p-3">
    
    {{#with actionBlock.input}}

     <section class="col-12 p-3">
            <input class="form-control" name="type" placeholder="{{placeholder}}">
            <label class="fform-control"></label>
        </section>
        
        {{/with}}

</div>


   <div class="col-10 p-3"> 

                    <ol class="nav nav-list mt-3">  
                   {{#each actionBlock.buttons}}
                        {{#if isSuccess}}
                        <li class="nav-item me-3"> <a href="{{link}}" class="btn btn-success">{{text}}</a></li> 
                       {{/if}}
                        {{#if isOutline}}
                        <li class="nav-item me-3"> <a href="{{link}}" class="btn btn-outline-success" >{{text}}</a>
                        </li>
                        {{/if}}
                         {{#if isDanger}}
                        <li class="nav-item me-3"> <a href="{{link}}" class="btn btn-outline-danger" >{{text}}</a>
                        </li>
                        {{/if}}
                    {{/each}}
                    </ol>  
    </div>
               
</div>

