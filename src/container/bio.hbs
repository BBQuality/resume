<main>

    <section>
<div class="col">
<div class="row bg-dark text-light py-3">
 <div class="col-4">
    <h1 class="text-bold text-warning">{{title}}</h1> 
 </div>
         <div class="col-6">
        <h1>Name : <ins>{{name}} </ins></h1>
</div>
  <div class="col-1">
  <a href="/" title="Main Page" class="btn text-light rounded uppercase border border-5" style="background: linear-gradient(40deg, rgba(159,17,43,1) 5%, rgba(255,222,27,0.7091211484593838) 87%, rgba(255,222,27,0.8911939775910365) 92%); ">Головна</a>
        </div> 
</div>
<div class="row bg-primary">
    <div class="col-4 p-2">
        <h3><b>Specialized at :</b></h3>
=<ul>
        {{#each known_for}}
        <li>{{this}}</li>
        {{/each}}

       <li><b>Occupation :</b> - <i> ({{occupation}})</i></li> 

       <li><b>Nationality :</b> - <i> ({{nationality}})</i></li> 

       <li><b>Specialized at :</b> - <i> ({{occupation}})</i></li> 

        <li> <ins><b>Born:</b></ins> <i>{{birthdate}}</i> - {{birthplace}}</li>

        <li> <ins><b>Death:</b></ins> <i>{{deathdate}}</i> - {{deathplace}}</li>
</ul>
</div>
  
     <div class="col-4 p-2">

       <h3><b>Education :</b></h3>
<ul> 
   {{#each education}}

        <li>Degree : {{degree}}</li>
        <li>Field : {{field}}</li>
        <li>Institute : {{institution}}</li>
        <li>Graduation year : {{year}}</li>

    {{/each}}
    </ul>
</div>

  <div class="col-4 p-2">
        <h3>Poligraphy :</h3>
<ul>
     {{#each notable_publications}}

      <li> <b>Name :</b> <ins>{{this.publisher}}</ins></li> 
        <li>Title : {{this.title}}</li>
        <li>Date : {{this.year}}</li>

    {{/each}}
</ul>
</div>

</div>
 

<div class="row bg-info">
    <div class="col-3 p-2">

        <h3>Awards :</h3>
<ul> 
{{#each awards}}

           <li> <b>Title :</b> <ins>{{this.title}}</ins></li>
          <li>Description :{{this.description}}</li>
          <li>Date : {{this.year}}</li>

{{/each}}
</ul>
    </div>

    <div class="col-3 p-2">
        <h3>Partners :</h3>
 <ul>
     {{#each partners}}
     
        <li><b>Name :</b> <ins>{{this.name}}</ins></li>
          <li>Relationship : {{this.relationship}}</li>
          <li>Date : {{this.year}}</li>

    {{/each}}
  </ul> 
  </div>
  
<div class="col-3 p-2">
        <h3>Influences :</h3>
<ul>
{{#each influences}}

        <li><b>Name : </b><ins>{{this}}</ins></li>

{{/each}}
</ul>
</div>
<div class="col-3 p-2">
        <h3>Influenced :</h3>
<ul>
{{#each influenced}}

        <li><b>Name : </b><ins>{{this}}</ins></li>

{{/each}}
</ul>
</div>
</div>

<div class="row">
    <div class="col-4 p-2 bg-warning">
    <h3><ins>Quotes : </ins></h3>
<ul type="none">
{{#each quotes}}

  <li><q>{{this}}</q></li>

{{/each}}
</ul>

    </div>

       <div class="col-8 p-2 bg-success">
        <div class="row">
            <div class="col-4 p-2">
        <h3>Major discoveries :</h3>
<ul>
{{#each major_discoveries}}
<li><b>Title :</b> <ins>{{this.title}}</ins></li>
 <li><b>Date :</b> <ins>{{this.year}}</ins></li>
        <li>Description :  {{this.description}}</li>
   
{{/each}}
</ul>
            </div>


<div class="col-4 p-2">
        <h3>Contributions :</h3>
  <ul>
{{#with contributions}}

    <b>Title : </b> <ins>{{title}}</ins>

        <b>Field : </b> <ins>{{field}}</ins>

        <b>Date : </b> <i>{{year}}</i>

       <b>Description : </b> 

        <ins>{{description}}</ins>

{{/with}}
</ul>
</div>

</div>
</div>
</div>
</div>

</main>

       



