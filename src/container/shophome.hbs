<main>

{{#with newsBlock}}
<section class="my-2">
    <div class="row text-center text-uppercase ">
        <h2>{{title}}</h2>
    </div>
    <br>
<div class="row">   
     {{#each cards}}
    <div class="col-3">
        <div class="row p-1">
        <div class="card bg-dark text-light p-1">
            
<div class="card-header py-1"> 
    <div class="row">
    <div class="col-6 text-start">
        <div class="row">
            
                   {{#if isTop}} 
                
       
            <p> <span class="badge bg-primary rounded-pill text-start"> TOP  </span></p>
 
             
            {{else}}
      {{/if}}
            </div>
        </div>    
        
        <div class="col-6">
        <div class="row text-end">
           {{#if isNew}} 

 
          <p>  <span class="badge bg-success rounded-pill text-end"> NEW  </span></p> 
      
         
      {{else}}  
       

{{/if}}</div>
        </div>
</div>
</div>

        <div class="card-title text-center p-1">    
<p class="fs-5 fw-bold text-normal text-uppercase">{{title}} </p>
            </div>

            <div class="card-body">
                <p>{{description}}</p>
            </div>
        </div>
        </div>
    </div> 
    {{/each}}
</div>
</section>
{{/with}}

{{!-- Перенести в компонент условия  --}}

{{#with goodsBlock}}
  <div class="col-12">
            <div class="row">
   <ol class="nav nav-tabs">
    {{#each tabs}}   
        {{#if isActive}}
          {{#if isDisabled}}
        <li class="nav-item active">
            <a class="nav-link disabled" href="#" >{{text}}</a>
        </li>
     {{else}}
     <li class="nav-item active">
            <a class="nav-link active" href="#" >{{text}}</a>
        </li>
        {{/if}}
        {{else}}
                    {{#unless isActive}}
                    {{#if isDisabled}}
                     <li class="nav-item">
            <a class="nav-link disabled" href="#" >{{text}}</a>
        </li>
{{else}}
<li class="nav-item disabled">
            <a class="nav-link" href="#" >{{text}}</a>
        </li>
        {{/if}}
            {{/unless}}
       {{/if}}
        {{/each}}  
   </ol>
   </div>
</div>
        

<section>
    <div class="row g-3">
   
        {{#each cards}}

        <div class="col-4">   
        {{> shopcard}}
        </div>
        {{/each}}
    </div>
</section>
{{/with}}


{{#with subscribe}}     

<div class="row my-2 mx-3">


          <div class="col-12">    
            
            <div class="row">  
            
                <div class="card bg-dark">
                     <div class="card-body mx-2 my-3">

                       <div class="row ">
<div class="col-6">
            <div class="row text-light">
<h2>{{header}}</h2>
<p>{{description}}</p>
                 </div>
                </div>


              {{#each buttons}}     
       <div class="col-3">
            <div class="row p-2 mt-3">    
             
                <a type="button" class="btn btn-primary" href="{{link}}">
                {{text}} 
                </a>  
             
                 </div>
                </div>
        {{/each}}

                       </div>
                     </div>
                </div>
           
             </div> 
  
          </div>
      
</div>
   {{/with}}


  
</main>