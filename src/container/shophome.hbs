{{#with goodsBlock}}
<div class="row my-2">

        
          <div class="col-8">
            <div class="row">
        

       
        <div  class="nav nav-tabs" > 
           {{#each tabs}}   
        {{#if isActive}}
   
            {{#if isDisabled}}
           
                  <div class="nav-item active m-2"> 
                    <a class="nav-link disabled" href="#" >{{text}}</a> 
                    </div>
               
                    {{else}}
                
                 <div class="nav-item active m-2"> 
                    <a class="nav-link disabled" href="#" >{{text}}</a> 
                    </div>
                 
                    {{/if}}
          
{{else}}
                    {{#unless isActive}}
   
            {{#if isDisabled}}
     
                  <div class="nav-item disabled m-2"> 
                    <a class="nav-link disabled" href="#" >{{text}}</a> 
                    </div>
         
                    {{else}}
          
                 <div class="nav-item disabled m-2 "> 
                    <a class="nav-link" href="#" >{{text}}</a> 
                    </div>
                    {{/if}}
            {{/unless}}
       {{/if}}
      {{/each}}     
        </div>

        </div>
    </div>
</div>

<section>
    <div class="row g-3">
   
        {{#each cards}}

